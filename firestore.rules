rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // This rule allows access for a limited time for development.
    // It is configured to expire in the future.
    // Make sure to write security rules for your app before that time.
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 10, 29);
    }
  }
}
