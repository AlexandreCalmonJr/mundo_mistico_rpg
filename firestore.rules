
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // This rule allows anyone to read and write to the database.
    // WARNING: This is insecure. You should secure your database before going to production.
    // For example, you could restrict write access to authenticated users:
    // allow write: if request.auth != null;
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
